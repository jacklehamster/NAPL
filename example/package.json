{
  "name": "example",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run build && bun --watch index.ts",
    "start:prod": "bun run build && NODE_ENV=production bun --watch index.ts",
    "build": "bun i && bun run build-icon && bun run copy-workers && bun run bundler/bundler.ts",
    "build-icon": "mkdir -p icons && icon-gen -i ../icon.png -o ./icons",
    "dev": "bun run build && bun --watch index.ts",
    "copy-workers": "mkdir -p dist && cp ./node_modules/@dobuki/hello-worker/dist/signal-room.worker.js ./dist/signal-room.worker.js"
  },
  "devDependencies": {
    "@dobuki/hello-worker": "^1.0.21",
    "@types/express": "^5.0.6",
    "bun-lightningcss": "^0.2.0",
    "bun-types": "^1.3.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "icon-gen": "^4.0.0",
    "napl": "link:napl",
    "png-to-ico": "^2.1.8",
    "serve-static-bun": "^0.5.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "json-stringify-pretty-compact": "^4.0.0"
  }
}
